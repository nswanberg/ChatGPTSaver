{
    "manifest_version": 3,
    "name": "Chat Extension",
    "version": "1.0",
    "description": "This extension stores the contents of a web-based chat conversation.",
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "unlimitedStorage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://chat.openai.com/*"
      ],
      "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "16": "icon16.png",
            "32": "icon32.png",
            "48": "icon48.png",
            "128": "icon128.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}